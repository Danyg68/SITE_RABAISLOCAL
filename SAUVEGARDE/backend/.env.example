# ============================================================================
# RABAISLOCAL - BACKEND ENVIRONMENT VARIABLES
# ============================================================================
# IMPORTANT: Copiez ce fichier vers .env et remplissez les valeurs réelles
# Ne commitez JAMAIS le fichier .env dans Git!
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3001
API_VERSION=v1
APP_NAME=RabaisLocal API
APP_URL=http://localhost:3001

# ============================================================================
# SUPABASE
# ============================================================================
SUPABASE_URL=https://VOTRE_PROJET.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# ============================================================================
# DATABASE (PostgreSQL via Supabase)
# ============================================================================
DATABASE_URL=postgresql://postgres:VOTRE_PASSWORD@db.VOTRE_PROJET.supabase.co:5432/postgres

# ============================================================================
# JWT & AUTHENTICATION
# ============================================================================
JWT_SECRET=VOTRE_SECRET_SUPER_LONG_ET_ALEATOIRE_256_BITS
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# REDIS (Cache & Sessions)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# OPENAI API (Intelligence Artificielle)
# ============================================================================
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# ============================================================================
# CANVA API (Génération visuels)
# ============================================================================
CANVA_API_KEY=VOTRE_CLE_CANVA
CANVA_BASE_URL=https://api.canva.com/v1

# ============================================================================
# MAILERSEND (Emails)
# ============================================================================
MAILERSEND_API_KEY=mlsn.VOTRE_CLE
MAILERSEND_FROM_EMAIL=bienvenue@rabaislocal.com
MAILERSEND_FROM_NAME=Équipe RabaisLocal

# ============================================================================
# PAYMENTS.AI (Paiements)
# ============================================================================
PAYMENTS_AI_API_KEY=VOTRE_CLE_PAYMENTS_AI
PAYMENTS_AI_WEBHOOK_SECRET=whsec_...

# ============================================================================
# PAYPAL (Paiements alternatifs)
# ============================================================================
PAYPAL_CLIENT_ID=VOTRE_CLIENT_ID
PAYPAL_CLIENT_SECRET=VOTRE_CLIENT_SECRET
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=VOTRE_WEBHOOK_ID

# ============================================================================
# GOAFFPRO (Programme d'affiliation)
# ============================================================================
GOAFFPRO_API_KEY=VOTRE_CLE_GOAFFPRO
GOAFFPRO_SHOP_ID=VOTRE_SHOP_ID
GOAFFPRO_WEBHOOK_SECRET=VOTRE_SECRET

# ============================================================================
# ONESIGNAL (Push Notifications)
# ============================================================================
ONESIGNAL_APP_ID=VOTRE_APP_ID
ONESIGNAL_API_KEY=VOTRE_CLE_API

# ============================================================================
# GOOGLE SERVICES
# ============================================================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_MAPS_API_KEY=AIza...
GOOGLE_OAUTH_CLIENT_ID=VOTRE_CLIENT_ID
GOOGLE_OAUTH_CLIENT_SECRET=VOTRE_SECRET

# ============================================================================
# FACEBOOK / META
# ============================================================================
FACEBOOK_APP_ID=VOTRE_APP_ID
FACEBOOK_APP_SECRET=VOTRE_SECRET

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN=http://localhost:3000,https://app.rabaislocal.com
CORS_CREDENTIALS=true

# ============================================================================
# FILE UPLOADS
# ============================================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ============================================================================
# SECURITY
# ============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=VOTRE_SECRET_SESSION_ALEATOIRE

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
SENTRY_DSN=https://VOTRE_CLE@sentry.io/VOTRE_PROJET
SENTRY_ENVIRONMENT=development

# ============================================================================
# CRON JOBS
# ============================================================================
ENABLE_CRON_JOBS=true
CRON_RESET_QUOTAS=0 0 1 * *
CRON_ARCHIVE_CONVERSATIONS=0 2 * * 0

# ============================================================================
# FEATURES FLAGS
# ============================================================================
FEATURE_AI_ENABLED=true
FEATURE_PAYMENTS_ENABLED=false
FEATURE_MOBILE_APP_ENABLED=false

# ============================================================================
# DEVELOPMENT
# ============================================================================
DEBUG=false
VERBOSE_LOGGING=false
